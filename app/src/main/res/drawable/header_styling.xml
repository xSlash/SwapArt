<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="10dp"
                />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="#C6FFFF"
                android:startColor="#C6FFFF"
                android:endColor="#C6FFFF"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="85dp"
                android:height="20dp"
                />
            <stroke
                android:width="2dp"
                android:color="#000000"
                />
        </shape>
    </item>
    <item android:top="-2dp"
        android:left="-2dp"
        android:right="-2dp"
        android:bottom="0dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="5dp"
                />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="#FFFFFF"
                android:startColor="#FFFFFF"
                android:endColor="#FFFFFF"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="85dp"
                android:height="20dp"
                />
            <stroke
                android:width="2dp"
                android:color="#000000"
                />
        </shape>
    </item>
</selector>