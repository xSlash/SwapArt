<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="swapart.martin.swapart.SettingsActivity"
    android:orientation="vertical"
    android:id="@+id/linearlayout1"
    android:weightSum="1"
    android:background="@drawable/popup_styling">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.33"
        android:id="@+id/linearLayout3">

        <Button
            android:background="@drawable/main_signup_button"
            android:paddingLeft="35px"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/profileicon"
            android:text="Profile"
            android:id="@+id/profileButton"
            android:layout_weight="0.5"
            android:layout_margin="20dp"></Button>

        <Button
            android:background="@drawable/main_signup_button"
            android:paddingLeft="35px"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/matchcriteriaicon"
            android:id="@+id/matchcriteriaButton"
            android:text="Match criteria"
            android:layout_weight="0.5"
            android:layout_margin="20dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.33"
        android:id="@+id/linearLayout4">

        <Button
            android:background="@drawable/main_signup_button"
            android:paddingLeft="35px"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="Contact us"
            android:drawableLeft="@drawable/contacticon"
            android:id="@+id/contactButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="20dp"
            android:layout_weight="0.5"/>

        <Button
            android:background="@drawable/main_signup_button"
            android:paddingLeft="35px"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="Share Swapart"
            android:drawableLeft="@drawable/shareicon"
            android:id="@+id/shareButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.33"
        android:id="@+id/linearLayout5">

        <Button
            android:background="@drawable/main_signup_button"
            android:paddingLeft="35px"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="Check for updates"
            android:drawableLeft="@drawable/updateicon"
            android:id="@+id/checkForUpdates"
            android:layout_weight="0.5"
            android:layout_margin="20dp" />

        <Button
            android:background="@drawable/main_signup_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="Close"
            android:id="@+id/closeSettings"
            android:layout_weight="0.5"
            android:layout_margin="20dp" />
    </LinearLayout>

</LinearLayout>
