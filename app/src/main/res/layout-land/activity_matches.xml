<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="swapart.martin.swapart.MatchesActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:background="@drawable/header_styling"
        android:id="@+id/linearLayout2"
        android:layout_weight="0.15">


        <ImageButton
            android:background="@drawable/header_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homeMatches"
            android:src="@drawable/newhomeicon"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_weight="0.10"
            android:layout_margin="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SwapArt"
            android:id="@+id/textView11"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_weight="0.80"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settingsMatches"
            android:src="@drawable/menuicon2"
            android:layout_alignBottom="@+id/textView12"
            android:scaleType="centerInside"
            android:layout_weight="0.10"
            android:adjustViewBounds="true"
            android:background="@drawable/header_buttons"
            android:layout_margin="3dp" />
    </LinearLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="You found a match!"
            android:id="@+id/textView12"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25px"
            android:layout_marginBottom="20px" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/matches_land_middleLL"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_below="@+id/linearLayout2"
        android:layout_above="@+id/matches_chatButton"
        android:layout_weight="0.5"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/matches_own_picture"
            android:layout_below="@+id/textView12"
            android:layout_above="@+id/imageView11"
            android:layout_alignRight="@+id/matches_liked_picture"
            android:layout_alignEnd="@+id/matches_liked_picture"
            android:layout_alignLeft="@+id/matches_liked_picture"
            android:layout_alignStart="@+id/matches_liked_picture"
            android:layout_weight="0.4" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView11"
            android:src="@drawable/leftrightswap"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.1"
            android:layout_gravity="center_vertical"
            android:layout_margin="20dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/matches_liked_picture"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/imageView11"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.4" />

    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.20">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Chat with your match"
            android:id="@+id/matches_chatButton"
            android:background="@drawable/main_signup_button"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp" />
    </RelativeLayout>

</LinearLayout>
