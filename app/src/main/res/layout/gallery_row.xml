<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rowImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/artData"
        android:maxHeight="250px"
        android:maxWidth="250dp"
        android:minHeight="140px"
        android:minWidth="140px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/titleTextView"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/rowImage"
        android:layout_toEndOf="@+id/rowImage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        android:id="@+id/rowChangeButton"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/artData"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/artData"
        android:layout_below="@+id/titleTextView"
        android:layout_toRightOf="@+id/rowImage"

        android:layout_toLeftOf="@+id/rowChangeButton"
        android:layout_toStartOf="@+id/rowChangeButton" />
</RelativeLayout>