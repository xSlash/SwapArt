<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="swapart.martin.swapart.SettingsActivity"
    android:orientation="vertical"
    android:id="@+id/linearlayout1"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:id="@+id/header"
        android:minHeight="100px"
        android:weightSum="1">

        <ImageButton
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:src="@drawable/homeicon"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_weight="0.10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Swapart"
            android:id="@+id/textView9"
            android:gravity="center"
            android:layout_weight="0.80" />

        <ImageButton
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:layout_weight="0.10"
            android:src="@drawable/menuicon2"
            android:scaleType="centerInside"
            android:adjustViewBounds="true" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <Button
            android:background="@drawable/main_signup_button"
            android:paddingLeft="35px"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/profileicon"
            android:text="Profile"
            android:id="@+id/profileButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:textAlignment="gravity"
            android:singleLine="true"
            android:layout_marginTop="50px"></Button>

        <Button
            android:background="@drawable/main_signup_button"
            android:paddingLeft="35px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/matchcriteriaicon"
            android:id="@+id/matchcriteriaButton"
            android:layout_below="@+id/profileButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Match criteria" />

        <Button
            android:background="@drawable/main_signup_button"
            android:paddingLeft="35px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App settings"
            android:drawableLeft="@drawable/settingsicon"
            android:id="@+id/appSettingsButton"
            android:layout_below="@+id/matchcriteriaButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="gravity" />

        <Button
            android:background="@drawable/main_signup_button"
            android:paddingLeft="35px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact support"
            android:drawableLeft="@drawable/contacticon"
            android:id="@+id/contactSupportButton"
            android:layout_below="@+id/appSettingsButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:background="@drawable/main_signup_button"
            android:paddingLeft="35px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share Swapart"
            android:drawableLeft="@drawable/shareicon"
            android:id="@+id/shareButton"
            android:layout_below="@+id/contactSupportButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:background="@drawable/main_signup_button"
            android:paddingLeft="35px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check for updates"
            android:drawableLeft="@drawable/updateicon"
            android:id="@+id/checkForUpdates"
            android:layout_below="@+id/shareButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>
