<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="swapart.martin.swapart.SettingsActivity"
    android:orientation="vertical"
    android:id="@+id/linearlayout1"
    android:weightSum="1"
    android:background="@drawable/popup_styling">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <Button
            android:background="@drawable/main_signup_button"
            android:paddingLeft="35px"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/profileicon"
            android:text="Profile"
            android:id="@+id/profileButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:textAlignment="gravity"
            android:singleLine="true"
            android:layout_marginTop="50px"></Button>

        <Button
            android:background="@drawable/main_signup_button"
            android:paddingLeft="35px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/matchcriteriaicon"
            android:id="@+id/matchcriteriaButton"
            android:layout_below="@+id/profileButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Match criteria"
            android:layout_marginTop="20dp" />

        <Button
            android:background="@drawable/main_signup_button"
            android:paddingLeft="35px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App settings"
            android:drawableLeft="@drawable/settingsicon"
            android:id="@+id/appSettingsButton"
            android:layout_below="@+id/matchcriteriaButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="gravity"
            android:layout_marginTop="20dp" />

        <Button
            android:background="@drawable/main_signup_button"
            android:paddingLeft="35px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact us"
            android:drawableLeft="@drawable/contacticon"
            android:id="@+id/contactButton"
            android:layout_below="@+id/appSettingsButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />

        <Button
            android:background="@drawable/main_signup_button"
            android:paddingLeft="35px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share Swapart"
            android:drawableLeft="@drawable/shareicon"
            android:id="@+id/shareButton"
            android:layout_below="@+id/contactButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp" />

        <Button
            android:background="@drawable/main_signup_button"
            android:paddingLeft="35px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check for updates"
            android:drawableLeft="@drawable/updateicon"
            android:id="@+id/checkForUpdates"
            android:layout_below="@+id/shareButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:id="@+id/closeSettings"
            android:layout_below="@+id/checkForUpdates"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/main_signup_button" />
    </RelativeLayout>

</LinearLayout>
